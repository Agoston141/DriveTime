generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
}

model Student {
  id         Int      @id @default(autoincrement())
  name       String
  password   String
  email      String
  bookings  Booking[] // Kapcsolat a foglalásokkal
}

model Instructor {
  id         Int      @id @default(autoincrement())
  name       String
  password   String
  email      String
  bookings  Booking[] // Kapcsolat a foglalásokkal
  car?      String
}

model Booking {
  id           Int        @id @default(autoincrement())
  bookedDate   DateTime   // Itt tároljuk a konkrét időpontot
  createdAt    DateTime   @default(now())

  // Kapcsolatok beállítása
  student      Student    @relation(fields: [studentId], references: [id])
  studentId    Int

  instructor   Instructor @relation(fields: [instructorId], references: [id])
  instructorId Int
}
