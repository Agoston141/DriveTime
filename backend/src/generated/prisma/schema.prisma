generator client {
  provider     = "prisma-client-js"
  output       = "../src/generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "mysql"
}

// 1. Admin modell a felügyelethez
model Admin {
  id       Int    @id @default(autoincrement())
  name     String
  email    String @unique
  password String
}

model Student {
  id       Int       @id @default(autoincrement())
  name     String
  email    String    @unique
  password String
  bookings Booking[]
}

model Instructor {
  id        Int            @id @default(autoincrement())
  name      String
  email     String         @unique
  password  String
  car       String?
  // Autó jóváhagyás állapota
  carStatus ApprovalStatus @default(PENDING)
  bookings  Booking[]
}

model Booking {
  id         Int      @id @default(autoincrement())
  bookedDate DateTime
  createdAt  DateTime @default(now())

  // Foglalás állapota (Elfogadva/Elutasítva/Függőben)
  status BookingStatus @default(PENDING)

  student   Student @relation(fields: [studentId], references: [id])
  studentId Int

  instructor   Instructor @relation(fields: [instructorId], references: [id])
  instructorId Int
}

// Segéd típusok a státuszok kezeléséhez
enum ApprovalStatus {
  PENDING // Admin jóváhagyásra vár
  APPROVED // Admin elfogadta (vezethet)
  REJECTED // Admin elutasította (pl. lovaskocsi)
}

enum BookingStatus {
  PENDING
  ACCEPTED
  REJECTED
}
